{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "include": [
    "CMakePresetsBase.json"
  ],
  "configurePresets": [
    {
      "name": "packaging-common",
      "binaryDir": "output/build/${presetName}",
      "installDir": "output/install/${presetName}",
      "hidden": true,
      "cacheVariables": {
        "OWL_PACKAGING": "ON",
        "OWL_TESTING": "OFF",
        "CMAKE_INSTALL_PREFIX": "output/install/${presetName}",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXE_LINKER_FLAGS_INIT": "-fuse-ld=lld",
        "CMAKE_SHARED_LINKER_FLAGS_INIT": "-fuse-ld=lld"
      }
    },
    {
      "name": "packaging",
      "generator": "Ninja Multi-Config",
      "hidden": true,
      "inherits": [
        "packaging-common"
      ],
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
      }
    },
    {
      "name": "package-engine-windows",
      "inherits": [
        "packaging"
      ],
      "cacheVariables": {
        "OWL_PACKAGE_NAME": "OwlEngine",
        "OWL_BUILD_NEST": "OFF",
        "OWL_BUILD_SANDBOX": "ON",
        "OWL_BUILD_DRONE": "OFF",
        "OWL_BUILD_CAST": "OFF",
        "OWL_PACKAGE_ENGINE": "ON"
      },
      "vendor": {
        "silmaen": {
          "archive_format": "zip"
        }
      }
    },
    {
      "name": "package-engine-linux",
      "inherits": [
        "package-engine-windows"
      ],
      "vendor": {
        "silmaen": {
          "docker_registry": "registry.argawaen.net",
          "docker_namespace": "builder",
          "docker_image": "builder-clang18-ubuntu2404",
          "docker_parameters": "-u %env.BUILDER_UID%:%env.BUILDER_GID% --platform=%docker_build_platform% -v %teamcity.agent.home.dir%/user/cache_dir:/tmp/cache_dir --network host -v %teamcity.agent.home.dir%/user:/home/user -e HOME=/home/user",
          "publish_doc": true,
          "archive_format": "tar.gz"
        }
      },
      "cacheVariables": {
        "OWL_ENABLE_DOCUMENTATION": "ON"
      }
    },
    {
      "name": "packaging-app-windows",
      "generator": "Ninja",
      "hidden": true,
      "inherits": [
        "packaging-common"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "vendor": {
        "silmaen": {
          "archive_format": "zip"
        }
      }
    },
    {
      "name": "packaging-app-linux",
      "hidden": true,
      "inherits": [
        "packaging-app-windows"
      ],
      "vendor": {
        "silmaen": {
          "archive_format": "tar.gz",
          "docker_registry": "registry.argawaen.net",
          "docker_namespace": "builder",
          "docker_image": "builder-clang18-ubuntu2404",
          "docker_parameters": "-u %env.BUILDER_UID%:%env.BUILDER_GID% --platform=%docker_build_platform% -v %teamcity.agent.home.dir%/user/cache_dir:/tmp/cache_dir --network host -v %teamcity.agent.home.dir%/user:/home/user -e HOME=/home/user"
        }
      }
    },
    {
      "name": "package-app-nest-windows",
      "inherits": [
        "packaging-app-windows"
      ],
      "cacheVariables": {
        "OWL_PACKAGE_NAME": "OwlNest",
        "OWL_BUILD_NEST": "ON",
        "OWL_BUILD_SANDBOX": "OFF",
        "OWL_BUILD_DRONE": "OFF",
        "OWL_BUILD_CAST": "OFF",
        "OWL_PACKAGE_ENGINE": "OFF"
      }
    },
    {
      "name": "package-app-drone-windows",
      "inherits": [
        "packaging-app-windows"
      ],
      "cacheVariables": {
        "OWL_PACKAGE_NAME": "OwlDrone",
        "OWL_BUILD_NEST": "OFF",
        "OWL_BUILD_SANDBOX": "OFF",
        "OWL_BUILD_DRONE": "ON",
        "OWL_BUILD_CAST": "OFF",
        "OWL_PACKAGE_ENGINE": "OFF"
      }
    },
    {
      "name": "package-app-nest-linux",
      "inherits": [
        "packaging-app-linux"
      ],
      "cacheVariables": {
        "OWL_PACKAGE_NAME": "OwlNest",
        "OWL_BUILD_NEST": "ON",
        "OWL_BUILD_SANDBOX": "OFF",
        "OWL_BUILD_DRONE": "OFF",
        "OWL_BUILD_CAST": "OFF",
        "OWL_PACKAGE_ENGINE": "OFF"
      }
    },
    {
      "name": "package-app-drone-linux",
      "inherits": [
        "packaging-app-linux"
      ],
      "cacheVariables": {
        "OWL_PACKAGE_NAME": "OwlDrone",
        "OWL_BUILD_NEST": "OFF",
        "OWL_BUILD_SANDBOX": "OFF",
        "OWL_BUILD_DRONE": "ON",
        "OWL_BUILD_CAST": "OFF",
        "OWL_PACKAGE_ENGINE": "OFF"
      }
    }
  ]
}
