{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "include": [
    "CMakePresetsBase.json",
    "CMakePresetsLinux.json",
    "CMakePresetsMinGW.json"
  ],
  "configurePresets": [
    {
      "name": "linux-clang-tidy",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "OWL_ENABLE_CLANG_TIDY": "ON",
        "OWL_ENABLE_COVERAGE": "OFF",
        "OWL_ENABLE_STACKTRACE": "ON"
      }
    },
    {
      "name": "windows-clang-tidy",
      "inherits": "windows-clang-debug",
      "cacheVariables": {
        "OWL_ENABLE_CLANG_TIDY": "ON",
        "OWL_ENABLE_COVERAGE": "OFF",
        "OWL_ENABLE_STACKTRACE": "ON"
      }
    },
    {
      "name": "linux-sanitizer-address",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "OWL_ENABLE_ADDRESS_SANITIZER": "ON",
        "OWL_ENABLE_COVERAGE": "OFF",
        "OWL_ENABLE_STACKTRACE": "ON"
      }
    },
    {
      "name": "linux-sanitizer-thread",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "OWL_ENABLE_THREAD_SANITIZER": "ON",
        "OWL_ENABLE_COVERAGE": "OFF",
        "OWL_ENABLE_STACKTRACE": "ON"
      }
    },
    {
      "name": "linux-sanitizer-undefined-behavior",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "OWL_ENABLE_UNDEFINED_BEHAVIOR_SANITIZER": "ON",
        "OWL_ENABLE_COVERAGE": "OFF",
        "OWL_ENABLE_STACKTRACE": "ON"
      }
    },
    {
      "name": "linux-sanitizer-leak",
      "inherits": "linux-clang-debug",
      "cacheVariables": {
        "OWL_ENABLE_LEAK_SANITIZER": "ON",
        "OWL_ENABLE_COVERAGE": "OFF",
        "OWL_ENABLE_STACKTRACE": "ON"
      }
    }
  ]
}
