{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "include": [
    "CMakePresetsBase.json",
    "CMakePresetsMinGW.json"
  ],
  "configurePresets": [
    {
      "name": "Documentation",
      "inherits": "base",
      "cacheVariables": {
        "OWL_DOC_ONLY": "ON",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "CodeCoverage",
      "inherits": "gcc-debug-static",
      "cacheVariables": {
        "OWL_ENABLE_COVERAGE": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "CodeCoverage_mingw",
      "inherits": "mingw-gcc-debug-static",
      "cacheVariables": {
        "OWL_ENABLE_COVERAGE": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "clang-tidy",
      "inherits": "clang-debug-shared",
      "cacheVariables": {
        "OWL_ENABLE_CLANG_TIDY": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "clang-tidy_mingw",
      "inherits": "mingw-clang-debug-shared",
      "cacheVariables": {
        "OWL_ENABLE_CLANG_TIDY": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ]
}