{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "include": [
    "CMakePresetsBase.json"
  ],
  "configurePresets": [
    {
      "name": "linux-gcc-release-static",
      "inherits": [
        "gcc-release-static"
      ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=mold",
        "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold"
      }
    },
    {
      "name": "linux-gcc-debug-static",
      "inherits": [
        "gcc-debug-static"
      ],
      "cacheVariables": {
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=mold",
        "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold"
      }
    },
    {
      "name": "linux-clang-release-static",
      "inherits": [
        "clang-release-static"
      ]
    },
    {
      "name": "linux-clang-debug-static",
      "inherits": [
        "clang-debug-static"
      ]
    },
    {
      "name": "linux-gcc-release-shared",
      "inherits": [
        "gcc-release-shared"
      ],
      "cacheVariables": {
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=mold",
        "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold"
      }
    },
    {
      "name": "linux-gcc-debug-shared",
      "inherits": [
        "gcc-debug-shared"
      ],
      "cacheVariables": {
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=mold",
        "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold"
      }
    },
    {
      "name": "linux-clang-release-shared",
      "inherits": [
        "clang-release-shared"
      ]
    },
    {
      "name": "linux-clang-debug-shared",
      "inherits": [
        "clang-debug-shared"
      ]
    }
  ]
}