{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "include": [
    "CMakePresetsBase.json"
  ],
  "configurePresets": [
    {
      "name": "linux-base",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "silmaen": {
          "docker_image": "builder-clang18-ubuntu2404"
        }
      }
    },
    {
      "name": "toolset-mold",
      "inherits": [
        "linux-base"
      ],
      "hidden": true,
      "cacheVariables": {
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=mold",
        "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=mold"
      }
    },
    {
      "name": "linux-gcc-release",
      "inherits": [
        "toolset-mold",
        "gcc-release"
      ],
      "vendor": {
        "silmaen": {
          "docker_image": "builder-gcc14-ubuntu2404"
        }
      }
    },
    {
      "name": "linux-gcc-debug",
      "inherits": [
        "toolset-mold",
        "gcc-debug"
      ],
      "cacheVariables": {
        "OWL_ENABLE_COVERAGE": "ON"
      },
      "vendor": {
        "silmaen": {
          "docker_image": "builder-gcc14-ubuntu2404",
          "release_preset": "linux-gcc-release"
        }
      }
    },
    {
      "name": "linux-clang-release",
      "inherits": [
        "linux-base",
        "clang-release"
      ]
    },
    {
      "name": "linux-clang-debug",
      "inherits": [
        "linux-base",
        "clang-debug"
      ],
      "cacheVariables": {
        "OWL_ENABLE_COVERAGE": "ON"
      },
      "vendor": {
        "silmaen": {
          "release_preset": "linux-clang-release"
        }
      }
    }
  ]
}
